<Window x:Class="Components.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cpu="clr-namespace:Components.CPUPerformance"
        xmlns:chart="clr-namespace:Components.PieChart"
        xmlns:gauge="clr-namespace:Components.Gauge"
        xmlns:console="clr-namespace:Components.Console"
        xmlns:richConsole="clr-namespace:Components.RichConsole"
        xmlns:timechart="clr-namespace:Components.TimeChart"
        Title="MainWindow" Width="900" Height="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <cpu:CPUView Grid.Row="0" Grid.Column="0"/>
        <timechart:TimeChartView Grid.Row="0" Grid.Column="1"/>
        <gauge:Gauge Grid.Row="1" Grid.Column="0"/>
        <richConsole:RichConsole Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Window>
